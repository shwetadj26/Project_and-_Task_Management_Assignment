spring.application.name=Mini Project Manager

# H2 Database Configuration
spring.datasource.url=jdbc:h2:mem:testdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=password

# Enables a UI to view the database in your browser
spring.h2.console.enabled=true

# Hibernate settings (automatically creates tables from our Java code)
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update


# JWT Configuration
app.jwt.secret=Jwts.SIG.HS256.key().build();
app.jwt.expiration123=86400000