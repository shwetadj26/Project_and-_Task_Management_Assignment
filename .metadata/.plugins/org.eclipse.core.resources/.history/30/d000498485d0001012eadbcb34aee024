package Com.JavaProjectManagement.Miniproject.entity;

import jakarta.persistence.*;
import lombok.*;
import java.time.LocalDateTime;

import org.hibernate.annotations.CreationTimestamp;
import org.hibernate.annotations.UpdateTimestamp;

import jakarta.persistence.*;
import lombok.*;
import java.time.LocalDate;

@Data
@Builder
@NoArgsConstructor 
@AllArgsConstructor
@Entity
@Table(name = "projects")
public class Project {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false)
    private String name;

    private String description;

    // We use LocalDate for dates without times
    private LocalDate startDate; 

    // Storing the Enum as a String (e.g., "IN_PROGRESS") in the DB is readable
    @Enumerated(EnumType.STRING)
    private ProjectStatus status;

    // The Relationship: Many Projects -> One User
    @ManyToOne(fetch = FetchType.LAZY) 
    @JoinColumn(name = "user_id", nullable = false) // This creates the foreign key column
    private User user;
}